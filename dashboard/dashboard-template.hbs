        <script src="scripts/less.js" type="text/javascript"></script>
    </head>
    <body class="dashboard-body">
        <header>
            <div class="container main-title">
                {{#if logo}}
                <img alt="Logo" width="170" src="{{logo}}" />
                {{else}}
                <h3>Logo</h3>
                {{/if}}
            </div>
        </header>
        <div class="container cf">
            <div class="sidebar">
                <div class="menu-icon">
                    <ul class="menu-bar-list">
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
                <div class="section-wrapper">
                    <h2 class="sidebar-title">Categories</h2>
                    <ul class="sidebar-list category">
                    {{#each categories}}
                        {{#ifvalue class value='page'}}
                        <li class="{{class}} active" data-category="{{class}}">
                            <button type="button" class="font-black">{{name}}</button>
                        </li>
                        {{else}}
                        <li class="{{class}}" data-category="{{class}}">
                            <button type="button" class="font-black">{{name}}</button>
                        </li>
                        {{/ifvalue}}
                    {{/each}}
                    </ul>
                </div>
                <div class="section-wrapper">
                    <h2 class="sidebar-title">Legend</h2>
                    <button class="filter-clear" type="button">Clear</button>
                    <ul class="sidebar-list legend">
                    {{#each statuses}}
                        <li class="{{class}}">
                            <button type="button" class="font-white">{{name}}</button>
                        </li>
                    {{/each}}
                    </ul>
                </div>
            </div>
            <div class="content">
                <ul class="item-list">
                {{#each generated}}
                    {{#ifvalue category value='page'}}
                    <li class="{{category}} {{status}}">
                        <a href="{{link}}">{{label}}</a>
                    </li>
                    {{else}}
                    <li class="{{category}} {{status}} hide">
                        <a href="{{link}}">{{label}}</a>
                    </li>
                    {{/ifvalue}}
                {{/each}}
                </ul>
            </div>
        </div>
        <script type="text/javascript" src="scripts/jquery.js"></script>
        <script type="text/javascript" src="scripts/main.js"></script>
    </body>
</html>
